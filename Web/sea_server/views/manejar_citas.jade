extends layout

block content
	.container
		br
		.row
			.col-md-2
			.col-md-8
				.jumbotron
					center
						h2 Servicio de Extencion Agricola
						h4 Manejar Citas
			.col-md-2
		
		.row
			.col-md-1
			.col-md-2
			.col-md-4
				.input-group
					input#search_bar(class='form-control', type='text', placeholder='Buscar')
					span(class='input-group-btn')
						button#btn_search(class='btn btn-default', type='button')
							i(class='glyphicon glyphicon-search')
			.col-md-4
			.col-md-1

		.row
			.col-md-1
			.col-md-6
				.panel.panel-success
					.panel-heading Citas Pendientes
					.panel-body
						.list-group(style='overflow:auto; height:300px;')
							table#citas_list(class='table')
								thead
									tr
										th 
											center
												strong Localización
										th 
											center
												strong Fecha y Hora
								tbody
									tr
										td
											a(class='list-group-item active show_info_cita', href='#', data-id='1') La granjita del pueblo
										td
											center
												span#cita_date Mayo 5, 2015
												span  at 
												span#cita_time 2:30pm
										td
											button(class='btn_edit_cita btn btn-sm btn-success btn-block', type='button', data-id='1') Editar
									tr
										td
											a(class='list-group-item show_info_cita', href='#', data-id='2') Cita 2
										td
											center
												span#cita_date Mayo 5, 2015
												span  at 
												span#cita_time 2:30pm
										td
											button(class='btn_edit_cita btn btn-sm btn-success btn-block', type='button', data-id='2') Editar
			#edit_panel.col-md-4(style="display:none")
				.jumbotron
					h4#heading_edit Editar Cita
					form(role='form')
						.form-group
							label(for='cita_location') Localización:
							input#cita_location(class='form-control', name='cita_location', type='text', placeholder='Localización')
						.form-group
							label(for='cita_date') Fecha:
							input#cita_date(class='form-control', name='cita_date', type='date')
						.form-group
							label(for='cita_time') Hora:
							input#cita_time(class='form-control', name='cita_time', type='time')
					.btn-group(role='group', aria-label='info panel buttons')
						button#btn_close_edit_panel(class='btn btn-default') Cerrar
						button#btn_edit(class='btn btn-default btn-success', type='button') Guardar

			#info_panel.col-md-4
				.panel.panel-success
					.panel-heading
						h3#info_panel_heading(class='panel-title') Dispositivo 1
					.panel-body
						table#dispositivo_info(class='table')
							tr
								td Nombre:
								td#dispositivo_info_name 
							tr
								td Numero de Identificación:
								td#dispositivo_info_id_num
							tr
								td Usuario Asignado:
								td#dispositivo_info_usuario
							tr 
								td Última Sincronicazión: 
								td#dispositivo_info_last_sync

		.row
			.col-md-3
			.col-md-2
				// TODO: add home glyphicon
				button#btn_home(class='btn btn-sm btn-default btn-block', type='button') Regresar a Página Principal

	//	Latest compiled and minified JavaScript
	script(src='//code.jquery.com/jquery-1.11.2.min.js')
	script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')
	script(src='/javascripts/manejar_citas.js')
	script(src='/javascripts/helpers.js')