<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/appointment_details_layout"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">
	
	<ViewFlipper
		android:id="@+id/appointment_flipper"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:id="@+id/no_appointment_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Button
				android:id="@+id/report_add_appointment_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableLeft="@drawable/ic_action_new"
				android:background="@android:color/transparent"
				android:text="@string/add_appointment"
				android:visibility="visible"
				/>

			</LinearLayout>

		<LinearLayout
			android:id="@+id/edit_appointment_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<DatePicker
				android:id="@+id/appointment_date_picker"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="gone">
			</DatePicker>

			<TimePicker
				android:id="@+id/appointment_time_picker"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="gone">
			</TimePicker>

			<EditText
				android:id="@+id/appointment_purpose_edit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="string/appointment_purpose"
				android:visibility="gone"
				/>

			<LinearLayout
				android:id="@+id/view_appointment_layout"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
					android:id="@+id/appointment_date_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/no_data"
					/>

				<TextView
					android:id="@+id/appointment_purpose_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/no_data"/>

				<TextView
					android:id="@+id/appointment_creator_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/no_data"/>

				</LinearLayout>

			</LinearLayout>


		</ViewFlipper>

</RelativeLayout>